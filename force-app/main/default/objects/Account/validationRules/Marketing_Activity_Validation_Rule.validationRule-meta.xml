<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Marketing_Activity_Validation_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISBLANK(  Marketing_Activity__c ),
TEXT( Guest_Source__c )==&apos;Marketing_Activity&apos;
)</errorConditionFormula>
    <errorDisplayField>Marketing_Activity__c</errorDisplayField>
    <errorMessage>If Guest Source is Marketing Activity then Marketing Activity Field is Mandatory.</errorMessage>
</ValidationRule>
