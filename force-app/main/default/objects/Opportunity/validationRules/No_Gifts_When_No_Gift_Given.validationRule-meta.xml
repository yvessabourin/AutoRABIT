<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_Gifts_When_No_Gift_Given</fullName>
    <active>false</active>
    <errorConditionFormula>TEXT(Gift_Status__c) = &apos;No Gift Given&apos; &amp;&amp;  Gifts_Recorded__c &gt; 0</errorConditionFormula>
    <errorDisplayField>Gift_Status__c</errorDisplayField>
    <errorMessage>You cannot mark a deal as &quot;No Gift Given&quot; and still have Gift records associated with it.</errorMessage>
</ValidationRule>
