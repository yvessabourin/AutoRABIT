<div class="slds-picklist--draggable slds-grid" data-aljs="multi-select">
	<div class="slds-form-element">
		<span class="slds-form-element__label" aria-label="select-1">{{unselectedLabel}}</span>
		<div class="slds-picklist slds-picklist--multi" data-aljs-multi-select="unselected">
			<ul class="slds-picklist__options slds-picklist__options--multi shown">
				{{#each unselectedItem in unselectedEmberObjects}}
					<li draggable="true" {{bind-attr id="unselectedItem.id" class=":slds-picklist__item :slds-has-icon :slds-has-icon--left unselectedItem.isSelected:slds-is-selected" aria-selected="unselectedItem.ariaSelectedValue"}} tabindex="0" role="option" {{action "clickItem" "unselected" unselectedItem}}>
						<span class="slds-truncate">
							<span>{{unselectedItem.label}}</span>
						</span>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="slds-grid slds-grid--vertical">
		<button class="slds-button slds-button--icon-container" {{action "clickUnselect"}}>
			<svg aria-hidden="true" class="slds-button__icon">
				<use xlink:href="{{unbound assetsLocation}}/assets/icons/utility-sprite/svg/symbols.svg#left"></use>
			</svg>
			<span class="slds-assistive-text">Pick list</span>
		</button>
		<button class="slds-button slds-button--icon-container" {{action "clickSelect"}}>
			<svg aria-hidden="true" class="slds-button__icon">
				<use xlink:href="{{unbound assetsLocation}}/assets/icons/utility-sprite/svg/symbols.svg#right"></use>
			</svg>
			<span class="slds-assistive-text">Pick list</span>
		</button>
	</div>
	<div class="slds-form-element">
		<span class="slds-form-element__label" aria-label="select-2">{{selectedLabel}}</span>
		<div class="slds-picklist slds-picklist--multi" data-aljs-multi-select="selected">
			<ul class="slds-picklist__options slds-picklist__options--multi shown">
				{{#each selectedItem in selectedEmberObjects}}
					<li draggable="true" {{bind-attr id="selectedItem.id" class=":slds-picklist__item :slds-has-icon :slds-has-icon--left selectedItem.isSelected:slds-is-selected" aria-selected="selectedItem.ariaSelectedValue"}} tabindex="0" role="option" {{action "clickItem" "selected" selectedItem}}>
						<span class="slds-truncate">
							<span>{{selectedItem.label}}</span>
						</span>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="slds-grid slds-grid--vertical">
		<button class="slds-button slds-button--icon-container" {{action "clickMoveUp"}}>
			<svg aria-hidden="true" class="slds-button__icon">
				<use xlink:href="{{unbound assetsLocation}}/assets/icons/utility-sprite/svg/symbols.svg#up"></use>
			</svg>
			<span class="slds-assistive-text">Pick list</span>
		</button>
		<button class="slds-button slds-button--icon-container" {{action "clickMoveDown"}}>
			<svg aria-hidden="true" class="slds-button__icon">
				<use xlink:href="{{unbound assetsLocation}}/assets/icons/utility-sprite/svg/symbols.svg#down"></use>
			</svg>
			<span class="slds-assistive-text">Pick list</span>
		</button>
	</div>
</div>